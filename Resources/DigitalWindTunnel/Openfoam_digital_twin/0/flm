FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object flm;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions [0 4 -4 0 0 0 0];

internalField uniform 0;

boundaryField
{
    inlet
    {
        type fixedValue;
        value uniform 0;
    }

    outlet
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      uniform 0;
    }

    bottom
    {
        type fixedValue;
        value uniform 0;
    }

    top
    {
        type    symmetryPlane;
    }
    
    leftWall
    {
        type    symmetryPlane;
    }

    rightWall
    {
        type    symmetryPlane;
    }
}

