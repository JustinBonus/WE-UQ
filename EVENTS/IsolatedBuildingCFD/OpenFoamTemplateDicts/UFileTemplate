FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

Uinlet          (10.0 0 0);

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform ($Uinlet 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Uinlet;
    }

    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }

    ground 
    {
        type            noSlip;
    }
    
    top    
    {
        type            slip;
    }

    front    
    {
        type            symmetry;
    }
    back    
    {
        type            symmetry;
    }
    
    building 
    {
        type            noSlip;
    }
}

// ************************************************************************* //
