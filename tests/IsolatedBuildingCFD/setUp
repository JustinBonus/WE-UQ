// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// Replication of wind tunnel model of 1:400 scale of CAARC model
// Domain size  = 5.5Hx11Hx22H

// Domain size and number of cells.
xMin                   -5.0;                        // Minimum x-extent of domain (m).
yMin                   -5.0;                        // Minimum y-extent of domain (m).
zMin                    0.0;                        // Minimum z-extent of domain (m).

xMax                    15.0;                       // Maximum x-extent of domain (m).
yMax                    5.0;                        // Maximum y-extent of domain (m).
zMax                    5.0;                        // Maximum z-extent of domain (m).

nx                      128;                        // Number of cells in x-direction for the whole tunnel.
ny                      64;                         // Number of cells in y-direction side prism layers.
nz                      32;                         // Number of cells in z-direction for top prism layers.


// Number of cores and domain decomposition information.
nCores                  16;                        // Number of cores on which to run this case.

// General conditions and parameters.
nu                      1.455E-5;                   // Molecular viscosity (m^2/s).
kappa                   0.41;                       // von Karman constant.
Uref                    12.621175;                  // Reference velocity
z0                      0.00100;                    // Surface roughness height
rho                     1.227;                      // Air density
Zref                    0.4572;                     // Reference height
H                       $Zref;                      // Building height
wallModelAverageType    "planarAverage";    	    // Treat surface stress wall model locally ("local") or with planar averaging ("planarAverage").
beta			0.3;       	    	    // Value to damp the flactuating part of the wall shear stress.

//Write controle parameters 
writeCtrl		adjustableRunTime;
probeWriteInterval      0.0025;
vtkWriteInterval        0.1;
fieldWriteInterval      1.0;
// ************************************************************************* //
